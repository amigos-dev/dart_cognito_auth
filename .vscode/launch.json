{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "dart_cognito_login_cli",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "CLI only (macOS debug)",
            "request": "launch",
            "type": "dart",
            "program": "bin/login_cli.dart",
            "deviceId": "macOS",
            "args": [
                "-s",
                "${input:clientSecret}",
            ]
        },
        {
            "name": "flutter_main (debug)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "toolArgs": [
                "--dart-define",
                "CLIENT_SECRET=${input:clientSecret}",
            ]
        },
        {
            "name": "flutter_main (iPhone debug)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "deviceId": "iPhone",
            "toolArgs": [
                "--dart-define",
                "CLIENT_SECRET=${input:clientSecret}",
            ]
        },
        {
            "name": "flutter_main (Android debug)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "deviceId": "emulator",
            "toolArgs": [
                "--dart-define",
                "CLIENT_SECRET=${input:clientSecret}",
            ]
        },
        {
            "name": "flutter_main (macOS debug)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "deviceId": "macOS",
            "toolArgs": [
                "--dart-define",
                "CLIENT_SECRET=${input:clientSecret}",
            ]
        },
        {
            "name": "flutter_main (Windows debug)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "deviceId": "Windows",
            "toolArgs": [
                "--dart-define",
                "CLIENT_SECRET=${input:clientSecret}",
            ]
        },
        {
            "name": "flutter_main (web debug)",
            "request": "launch",
            "type": "dart",
            "deviceId": "chrome",
            "flutterMode": "debug",
            "toolArgs": [
                "--web-port",
                "8501",
                "--dart-define",
                "CLIENT_SECRET=${input:clientSecret}",
                "--dart-define",
                "PORT=8501",
            ],
            "env": {
                "UNWRAPPED_CHROME_EXECUTABLE": "${env:CHROME_EXECUTABLE}",
                "CHROME_EXECUTABLE": "${workspaceFolder}/scripts/chrome.sh",
                "FLUTTER_CHROME_USER_DATA_DIR": "${workspaceFolder}/private/web_user_data"
            },
        },
        {
            "name": "dart_cognito_login_cli (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "dart_cognito_login_cli (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ],
    "inputs": [
        {
          "id": "clientSecret",
          "type": "command",
          "command": "extension.commandvariable.file.content",
          "args": {
            "fileName": "${workspaceFolder}/.env",
            "key": "CLIENT_SECRET"
          }
        }
      ]
    }